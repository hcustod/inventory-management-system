@model InventoryManagementSystem.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-controller="Products" asp-action="Create" method="post">
    
    <div class="mb-3">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" required/>
    </div>
   <div class="mb-3">
        <label>Description:</label>
        <input asp-for="Description" class="form-control" required/>
    </div>
    
    <div class="mb-3">
        <label>Category:</label>
        <select asp-for="CategoryId" class="form-control" required>
            <option value="" disabled selected>Select Category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.CategoryName</option>
            }
        </select>
    </div>
    
    <div class="mb-3">
        <label>Price:</label>
        <input asp-for="Price" class="form-control" required/>
    </div>
    
    <div class="mb-3">
        <label>Stock Quantity:</label>
        <input asp-for="ProductStockAmount" class="form-control" required/>
    </div>
    
    <div class="mb-3">
        <label>Low Stock Threshold:</label>
        <input asp-for="LowStockThreshold" class="form-control" required/>
    </div>
    
    
    <button type="submit" class="btn btn-success">Save Product</button>
    
</form>
