@model IEnumerable<InventoryManagementSystem.Models.Order>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Guest Orders";
}

<h2 class="mt-4">Guest Orders</h2>

<!-- Create order button only visible to user roles --> 
@if (User.IsInRole("User"))
{
    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#orderModal">Create Order</button>
}

<!-- Order modal -->
<div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Place an Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="orderForm">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price ($)</th>
                            <th>Stock</th>
                            <th>Quantity</th>
                        </tr>
                        </thead>
                        <tbody id="productList">
                        <!-- Products inserted here -->
                        </tbody>
                    </table>

                    <div class="text-end">
                        <button type="button" class="btn btn-primary" id="checkoutBtn" disabled>Proceed to Checkout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Checkout modal -->
<div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                
                <h5 class="modal-title">Order Summary</h5>
                
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Subtotal ($)</th>
                    </tr>
                    </thead>
                    <tbody id="orderSummary">
                    <!-- Items inserted here -->
                    </tbody>
                </table>

                <div class="text-end">
                    <h5>Total: $<span id="orderTotal">0.00</span></h5>
                </div>

                <div class="mb-3">
                    <label for="guestName" class="form-label">Name</label>
                    <input type="text" id="guestName" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="guestEmail" class="form-label">Email</label>
                    <input type="email" id="guestEmail" class="form-control" required>
                </div>

                <div class="text-end">
                    <button type="button" class="btn btn-success" id="confirmOrderBtn">Confirm Order</button>
                </div>

            </div>
        </div>
    </div>
</div>


<!-- Delete modal -->
<div class="modal fade" id="deleteOrderModal" tabindex="-1" aria-labelledby="deleteOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Order Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this order?</p>
                <div class="form-check">
                    <input type="checkbox" id="confirmDeleteCheckbox" class="form-check-input">
                    <label for="confirmDeleteCheckbox" class="form-check-label"> It cannot be undone. </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger" disabled>Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Spinner symbol -->
<div id="loading" style="display:none;" class="text-center my-3">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<!-- Table for orders display -->
<table class="table table-striped">
    
    <thead>
    <tr>
        <th>Order #</th>
        <th>Guest Name</th>
        <th>Email</th>
        <th>Order Date</th>
        <th>Total Price ($)</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.userName</td>
                <td>@order.userEmail</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>$@order.TotalPrice.ToString("F2")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <button class="btn btn-danger btn-sm delete-order-btn" data-id="@order.Id" data-bs-toggle="modal" data-bs-target="#deleteOrderModal">Delete</button>
                    }
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center">No orders found.</td>
        </tr>
    }
    </tbody>
    
</table>

<script src="~/js/orders.js"></script>

