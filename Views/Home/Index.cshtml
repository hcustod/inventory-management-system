@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h2 class="card-title mb-3">Welcome to the Smart Inventory System</h2>
                    <p class="card-text mb-4">Select an option below to get started:</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-primary px-4" asp-controller="Products" asp-action="Index">
                            Manage Products
                        </a>
                        <a class="btn btn-success px-4" asp-controller="Orders" asp-action="Index">
                            Track Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>